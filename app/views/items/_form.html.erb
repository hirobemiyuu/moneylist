<div class="jumbotron">
  <div class="row">
    <div class="offset-sm-4 col-sm-2">
      <%= link_to @title.name, title_path(@title), class: 'btn btn-primary' %>
    </div>
    <div class="col-sm-2">
      <%= link_to '小遣い帳詳細', title_path(@title), class: 'btn btn-info' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 offset-sm-4 mt-3">
      <%= form_with(model: item, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form_group text-center mt-1">
          <%= f.label :day, '日付' %>
          <%= f.text_field :day, class: 'form-control', required: true %>
        </div>
        <div class="form_group text-center mt-1">
          <%= f.label :place, '場所' %>
          <%= f.text_field :place, class: 'form-control', required: true %>
        </div>
        <div class="form_group text-center mt-1">
          <%= f.label :name, '名前' %>
          <%= f.text_field :name, class: 'form-control', required: true %>
        </div>
        <div class="form_group text-center mt-1">
          <%= f.label :price, '値段' %>
          <%= f.text_field :price, class: 'form-control', required: true %>
        </div>
        <div class="form_group text-center mt-1">
          <%= f.label :tag_1, 'メインタグ' %>
          <%= f.text_field :tag_1, class: 'form-control', required: true %>
        </div>
        <div class="form_group text-center mt-1">
          <%= f.label :tag_2, 'サブタグ' %>
          <%= f.text_field :tag_2, class: 'form-control' %>
        </div>
        <center>
          <%= f.hidden_field :title_id %>
          <%= f.submit action, class: "btn btn-warning mt-1" %>
        </center>
      <% end %>
    </div>
  </div>
</div>
