<% if logged_in? %>
  <div class="row">
    <div class="offset-sm-6 col-sm-2">
      <%= link_to '一覧', '/', class: 'btn btn-primary' %>
    </div>
  </div>  
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= form_with(model: @title, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form_group">
          <%= f.label :name, 'title' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <% if @current_user.id == @title.user_id %>
          <div class="field">
            <div class="radio-inline">
              <%= f.radio_button :status, '個人用' %>
              <%= f.label :status, '個人用', value: '個人用', class: "job_type_label" %>
            </div>
            <div class="radio-inline">
              <%= f.radio_button :status, '共有' %>
              <%= f.label :status, '共有', value: '共有', class: "job_type_label" %>
            </div>
          </div>
        <% end %>
        <%= f.submit '追加', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>