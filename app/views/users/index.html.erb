<% if @users.any? %>
  <div class="row jumbotron">
    <div class="col-sm-4">
      <h1>ユーザー一覧</h1>
    </div>
    <div class="offset-sm-6 col-sm-2">
      <%= link_to '小遣い帳一覧', '/', class: 'btn btn-info' %>
    </div>
  </div>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-sm-2">
        <div class="card mt-3 mb-3">
          <div class="card-header">
            <h3 class="card-title"><%= link_to user.name, user_path(user) %></h3>
          </div>
          <div class="card-body">
            <img class="rounded img-fluid" src="<%= user.image.url %>" width="150", height="150">
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>