<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-8">
      <div>
        <h1>小遣い帳投稿一覧</h1>
      </div>
    </aside>
    <div class="col-sm-2">
      <%= link_to '新規小遣い帳', new_title_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-sm-2">
      <%= link_to 'マイページ', user_path(@current_user), class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-8 col-sm-4">
      <h3>検索</h3>
      <%= form_tag(root_path, :method => 'get' ) do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search', :name => nil %>
      <% end %>
    </div>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-left">タイトル</th>
        <th class="text-left">金額</th>
        <th class="text-left">作成者</th>
        <th class="text-left">共有</th>
      </tr>
      <% @titles.each do |title| %>
        <tr>
          <td class="text-left"><%= link_to title.name, title_path(title) %></td>
          <td class="text-left"><%= number_to_currency(title.total_fee, :locale => 'jp') %></td>
          <td class="text-left"><%= link_to title.user.name, user_path(title.user) %></td>
          <td class="text-left">
            <% if title.status == true %>
              〇
            <% end %>
          </td>
        </tr>
      <% end %>
    </thead>
  </table>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Cash Book Share</h1>
  
      <h2>ログイン</h2>
      <div class="row">
        <div class="col-sm-6 offset-sm-3">
          <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :email, 'Email' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, 'Password' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            
            <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      </div>
  
      <p>新しくアカウントを作成しますか?</p>
      <%= link_to '新規登録', signup_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>