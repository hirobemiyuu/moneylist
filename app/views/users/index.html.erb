<% if @users.any? %>
  <h1>ユーザー一覧</h1>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-sm-2">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= link_to user.name, user_path(user) %></h3>
          </div>
          <div class="card-body">
            <img class="rounded img-fluid" src="<%= user.image.url %>" width="150", height="150">
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>